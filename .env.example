# Protek Analitik Environment Variables Template
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Admin Credentials
ADMIN_USERNAME=your-admin-username
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-password

# Database (Cloudflare D1)
D1_DATABASE_ID=your-d1-database-id

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_HOURS=24

# Monitoring & Logging
LOG_LEVEL=error
ENABLE_AUDIT_LOGGING=true

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_NOTIFICATIONS=true
MAINTENANCE_MODE=false

# SEO & Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=your-gtm-id

# Social Media
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourcompany
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourcompany

# Contact Information
NEXT_PUBLIC_COMPANY_NAME=Your Company Name
NEXT_PUBLIC_COMPANY_EMAIL=info@yourdomain.com
NEXT_PUBLIC_COMPANY_PHONE=+90 (xxx) xxx xx xx
NEXT_PUBLIC_COMPANY_ADDRESS=Your Address
